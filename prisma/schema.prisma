// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model App {
  id            String   @id @default(cuid())
  appName       String   // App Name - The name of a mobile app
  platform      String   // Platform - iOS or Android
  date          DateTime // Date - The specific date for the data being reported
  country       String   // Country - The geographic country where the app metrics were recorded
  installs      Int      // Installs - The number of times the app was downloaded by users
  inAppRevenue  Float    // In-App Revenue - Revenue generated from purchases made within the app
  adsRevenue    Float    // Ads Revenue - Revenue earned from advertisements displayed within the app
  uaCost        Float    // UA Cost - User Acquisition Cost â€“ the amount spent on marketing and advertising
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  queries Query[]

  @@map("apps")
}

model Query {
  id           String   @id @default(cuid())
  userId       String?
  appId        String?
  queryText    String
  sqlGenerated String
  result       String?
  timestamp    DateTime @default(now())

  app App? @relation(fields: [appId], references: [id], onDelete: SetNull)

  @@map("queries")
}
